<h1>Volunteer Details</h1>

<p><strong>Name:</strong> <%= @volunteer.full_name %></p>
<p><strong>Email:</strong> <%= @volunteer.email %></p>
<p><strong>Phone Number:</strong> <%= @volunteer.phone_number %></p>

</br>

<% if policy(@volunteer).edit? %>
  <%= link_to 'Edit', edit_volunteer_path(@volunteer) %> |
<% end %>

<% if policy(@volunteer).destroy? %>
  <%= link_to 'Delete', @volunteer, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', volunteers_path %>